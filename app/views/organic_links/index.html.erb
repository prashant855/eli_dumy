<%- model_class = OrganicLink -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<p id="notice"><%= notice %></p>
<div class='row'>
  <div class='span2'>
  </div>
  <div class='span8'>
    <div class="span4">
      <%= link_to t('.new_search', :default => t("helpers.links.new")), root_path, :class => 'btn btn-primary' %></div>
    <div class="span8">
      <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%= model_class.human_attribute_name(:search) %></th>
      <th><%= model_class.human_attribute_name(:options) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @organic_links.each do |organic_link| %>
      <tr>
        <td><%= link_to organic_link.id, organic_link_path(organic_link) %></td>
        <td><%= organic_link.name %></td>
        <td><%= organic_link.link %></td>
        <td><%= organic_link.search %></td>
        <td><%= organic_link.options %></td>
        <td><%=l organic_link.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_organic_link_path(organic_link), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      organic_link_path(organic_link),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

