<%- model_class = OrganicLink -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @organic_link.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
  <dd><%= @organic_link.link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:search) %>:</strong></dt>
  <dd><%= @organic_link.search %></dd>
  <dt><strong><%= model_class.human_attribute_name(:options) %>:</strong></dt>
  <dd><%= @organic_link.options %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              organic_links_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organic_link_path(@organic_link), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organic_link_path(@organic_link),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
