<%= form_for @organic_link, :html => { :class => "form-horizontal organic_link" } do |f| %>

  <% if @organic_link.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@organic_link.errors.count, "error") %> prohibited this organic_link from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @organic_link.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :link, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :link, :class => 'form-control' %>
    </div>
    <%=f.error_span(:link) %>
  </div>
  <div class="form-group">
    <%= f.label :search, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :search, :class => 'form-control' %>
    </div>
    <%=f.error_span(:search) %>
  </div>
  <div class="form-group">
    <%= f.label :options, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :options, :class => 'form-control' %>
    </div>
    <%=f.error_span(:options) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                organic_links_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
